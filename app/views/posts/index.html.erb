<% if @posts.count > 0 %>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
         <% @posts.each do |post| %>
           <article>
          	 <header><h2><%= link_to post.title, post %></h2></header>
          	 <small id="post-date">
          	   <%= "Publicado por #{post.user.email} hace "%>
               <%= "#{time_ago_in_words(post.created_at)}" %>
          	 </small>
             <div class="lead body-post">
               <%= markdown(post.body.first(255)) %>
             </div>
             <footer>
               <% if user_signed_in? %>
                 <% if current_user.id == post.user.id%>
                   <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar'.html_safe, edit_post_path(post) %>
                   <%= link_to '<span class="glyphicon glyphicon-trash" aria-hiden="true"></span> Eliminar'.html_safe, post_path(post), method: :delete, data: {confirm:'Â¿Estas segur@ de eliminar el post?'}%>
                 <% end %>
               <% end %>
             </footer>
            </article>
          <% end %>
      </div>
    </div>
  </div>
<% else %>
  
<% end %>
